@model IEnumerable<BulletinBoard.Models.RoleViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Role";
}

<h3>@ViewData["Title"]</h3>
<hr/>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    <p asp-display-for="@item.ApplicationUser.Email"></p>
                </td>
                <td>
                    @using (Html.BeginForm("ChangeRole", "Role", FormMethod.Post))
                    {
                        <div class="form-inline">
                            <select onchange="this.form.submit()" class="form-control" name="roleId" asp-for="@item.RoleId"
                                    asp-items="@(new SelectList(@item.Roles, "Id", "Name", @item.RoleId))">
                            </select>
                            <input type="hidden" name="applicationUserId" value="@item.ApplicationUserId" />
                        </div>
                    }
                </td>
            </tr>
    }
    </tbody>
</table>
